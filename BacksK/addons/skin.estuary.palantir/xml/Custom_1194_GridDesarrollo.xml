<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1194">
    <zorder>9998</zorder>
    <visible>Skin.HasSetting(DebugGrid)</visible>
    <controls>

        <include content="Object_Control" condition="Skin.HasSetting(DebugGrid)">
            <param name="control">group</param>

            <!-- Vertical 40 px lines -->
            <control type="grouplist">
                <itemgap>40</itemgap>
                <orientation>vertical</orientation>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line_5</include>
                <include>Vert_Red_Line</include>
                <include>Vert_Red_Line</include>
            </control>

            <!-- Horizontal 40 px lines -->
            <control type="grouplist">
                <itemgap>40</itemgap>
                <orientation>horizontal</orientation>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line_5</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
                <include>Horz_Red_Line</include>
            </control>

            <!-- Screen Padding Lines -->
            <control type="image">
                <top>80</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>80</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <left>80</left>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <right>80</right>
                <width>1</width>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Outer Border Lines -->
            <control type="image">
                <top>120</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>120</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Inner Border Lines -->
            <control type="image">
                <top>200</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>200</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- View Border Lines -->
            <control type="image">
                <top>520</top>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>
            <control type="image">
                <bottom>520</bottom>
                <height>1</height>
                <texture colordiffuse="red">common/white.png</texture>
            </control>

            <!-- Trough Lines -->
            <control type="group">
                <height>200</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>40</height>
                    <control type="image">
                        <top>-10</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-10</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>
            <control type="group">
                <bottom>0</bottom>
                <height>200</height>
                <control type="group">
                    <centertop>50%</centertop>
                    <height>40</height>
                    <control type="image">
                        <top>-10</top>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                    <control type="image">
                        <bottom>-10</bottom>
                        <height>1</height>
                        <texture colordiffuse="green">common/white.png</texture>
                    </control>
                </control>
            </control>

            <!-- Center Lines -->
            <control type="image">
                <centertop>50%</centertop>
                <height>1</height>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>
            <control type="image">
                <centerleft>50%</centerleft>
                <width>1</width>
                <texture colordiffuse="blue">common/white.png</texture>
            </control>

        </include>
    </controls>
</window>